---
layout: default
title: Student Page
pagination:
    data: studentData
    size: 1
    alias: student
permalink: "student/{{ student.id }}/"
---

<div>
    <div class="columns dark min-h-900 mb-0 mt-0">
        <div class="profile-col-left page-padding-left column is-flex flex-column">
            <div class="layout-main z-1 fadein">
                <h4 class="is-size-5 mb-3 max-w-600">{{ student.majors | join(", ", "title") }}</h4>
                <h1 class="title student-large-title is-uppercase mb-2">{{ student.name.first }} {{ student.name.last }}</h1>
                <p class="max-w-600">{{ student.statement }}</p>
            </div>
            <div class="mb-2 is-relative z-1">
                <p class="max-w-600 mb-2">
                    {{ student.bio }}
                </p>
                
                <div class="is-flex items-center w-full mt-6 max-w-600">
                    <a href="{{ student.portfolio }}" target="_blank" rel="noopener noreferrer">
                        <button class="button is-white is-medium">Portfolio</button>
                    </a>
                    <div class="social-icons items-center ml-5 layout-main">
                        {% for social in student.social %}
                            <a href="{{ social.link }}" target="_blank" rel="noopener noreferrer">
                            {% if socialIcons[social.name] %}    
                                <i class="fab {{ socialIcons[social.name] }}"></i>
                            {% else %}
                                <span>{{ social.name.substring(0, 2) }}<span>
                            {% endif %}
                            </a>        
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="major-orbs">
            {% for major in student.majors %}
                {% if majorImages[major.id] %}
                    <img src="{{ majorImages[major.id] }}">                    
                {% endif %}
            {% endfor %}
            </div>
        </div>
        <div class="column is-one-third px-0 py-0 portfolio-image profile-headshot headshot-hover">
            {% if student.headshots.fun %}
                <img src="{{ student.headshots.fun }}" class="student-headshot wide-min-h-full stacked-max-h-600" alt="sample student">            
                <img src="{{ student.headshots.pro }}" class="student-headshot headshot-pro wide-min-h-full stacked-max-h-600" alt="sample student">
            {% else %}
                <img src="{{ student.headshots.pro }}" class="student-headshot wide-min-h-full stacked-max-h-600" alt="sample student">
            {% endif %}
        </div>
    </div>
    <div class="student-image-grid page-padding-all has-background-white">
        <img src="https://via.placeholder.com/2560x1920" alt="Alt Tag">
        <img src="https://via.placeholder.com/2560x1920" alt="Alt Tag">
        <img src="https://via.placeholder.com/2560x1920" alt="Alt Tag">
        <img src="https://via.placeholder.com/2560x1920" alt="Alt Tag">
        <img src="https://via.placeholder.com/2560x1920" alt="Alt Tag">
    </div>
</div>